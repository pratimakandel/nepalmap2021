#!/bin/bash

set -eou pipefail


: ${APP_ENV?"APP_ENV not set. Aborting!"}


if [ "$APP_ENV" = "prod" ]; then



    exec caddy run --config /etc/caddy/Caddyfile --adapter caddyfile --log stdout



else



    # For stage, etc., run the following as it's not rate-limited



    exec caddy run --config /etc/caddy/Caddyfile --adapter caddyfile --log stdout --ca https://acme-staging-v02.api.letsencrypt.org/directory



fi
